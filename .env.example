# RAG System Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API KEYS (Required for Graphiti RAG functionality)
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic API Configuration (Optional, alternative to OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neo4j Database Settings
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=changeme123

# Note: Use a strong password in production
# Example: NEO4J_PASSWORD=SecurePassword123!

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Graphiti Service Settings
GRAPHITI_HOST=0.0.0.0
GRAPHITI_PORT=8000

# =============================================================================
# PRODUCTION SETTINGS (for Zeabur deployment)
# =============================================================================

# Domain Configuration (for production SSL)
DOMAIN=your-domain.com

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# =============================================================================
# OPTIONAL ADVANCED SETTINGS
# =============================================================================

# Neo4j Memory Configuration (adjust based on your server specs)
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=1G

# Nginx Configuration
CLIENT_MAX_BODY_SIZE=50M

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'development' for local testing, 'production' for deployment
ENVIRONMENT=development

# Enable/disable debug mode
DEBUG=false